{
   "_comment": "Dynamic Acoustic Phenotyping Config - Phase 2. This config uses behavioral dynamics metrics (CV, entropy, silence_ratio) that better correlate with DSM-5 depression criteria.",
   "_version": "2.0.0",
   "_created": "2025-12-27",

   "1_depressed_mood": {
      "_rationale": "Monotone speech (low pitch variability) is a hallmark of depressed mood. Low f0_cv and f0_entropy indicate flat, predictable intonation patterns.",
      "metrics": {
         "f0_cv": {
            "weight": 2.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "LOW CV = monotone speech = depression marker (KEY INDICATOR)"
         },
         "f0_entropy": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "LOW entropy = predictable/flat intonation"
         },
         "f0_avg": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "f0_std": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "rms_energy_cv": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "LOW energy variability = flat affect"
         },
         "silence_ratio": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0,
            "_note": "More silence = reduced speech initiation"
         },
         "spectral_flatness": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0
         },
         "rate_of_speech": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "jitter": {
            "weight": 0.5,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0
         },
         "shimmer": {
            "weight": 0.5,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0
         }
      },
      "smoothing_factor": 0.8667,
      "severity_threshold": 0.5
   },

   "2_loss_of_interest": {
      "_rationale": "Anhedonia manifests as reduced emotional expressivity and flat affect in speech.",
