         "f0_cv": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "Reduced pitch variability = emotional blunting"
         },
         "f0_entropy": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "f0_iqr": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "rms_energy_cv": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "Reduced energy dynamics = flat affect"
         },
         "rms_energy_entropy": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "rms_energy_range": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "speech_velocity": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "Slower state transitions = reduced engagement"
         }
      },
      "smoothing_factor": 0.8667,
      "severity_threshold": 0.5
   },

   "3_significant_weight_changes": {
      "_rationale": "Not acoustically measurable. Set to 0 in derived scores.",
      "metrics": {},
      "smoothing_factor": 0.8667,
      "severity_threshold": 0.5
