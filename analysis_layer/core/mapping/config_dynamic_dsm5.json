   "4_insomnia_hypersomnia": {
      "_rationale": "Sleep disruption affects voice quality (HNR) and modulation patterns. Fatigue from poor sleep shows in vocal effort.",
      "metrics": {
         "hnr_mean": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "Lower HNR = breathier/hoarse voice from fatigue"
         },
         "hnr_cv": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0,
            "_note": "High variability = inconsistent voice quality"
         },
         "rms_energy_mean": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "Lower energy = fatigue from poor sleep"
         },
         "temporal_modulation": {
            "weight": 1.0,
            "correlation": "nonlinear",
            "direction": "anomaly",
            "clipping_threshold": 3.0
         },
         "spectral_modulation": {
            "weight": 1.0,
            "correlation": "nonlinear",
            "direction": "anomaly",
            "clipping_threshold": 3.0
         }
      },
      "smoothing_factor": 0.8667,
      "severity_threshold": 0.5
   },

   "5_psychomotor_retardation_agitation": {
      "_rationale": "This is the KEY indicator for behavioral dynamics. Silence ratio and speech velocity are direct measures of psychomotor state.",
      "metrics": {
         "silence_ratio": {
            "weight": 3.0,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0,
            "_note": "HIGH silence ratio = psychomotor retardation (PRIMARY MARKER)"
         },
         "speech_velocity": {
            "weight": 2.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
            "_note": "LOW speech velocity = slower, fragmented speech"
         },
         "pause_mean_duration": {
            "weight": 2.0,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0,
            "_note": "Longer pauses = cognitive/motor slowing"
         },
         "pause_max_duration": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0,
            "_note": "Very long pauses indicate significant retardation"
         },
         "pause_total_duration": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "positive",
            "clipping_threshold": 3.0
         },
         "rate_of_speech": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "articulation_rate": {
            "weight": 1.5,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0
         },
         "f2_transition_speed": {
            "weight": 1.0,
            "correlation": "linear",
            "direction": "negative",
            "clipping_threshold": 3.0,
